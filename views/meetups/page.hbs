<div class="container meetups">
    <div class="row">
        <!--<div class="map-container">-->
        <!--</div>-->
        <div class="col-sm-6">

            <div class="card single-meetup-card">
                <div id="map"></div>

                <div>

                    <h3 class="card-title">
                        {{meetup.title}}
                    </h3>
                    <div class="divider"></div>
                </div>

                <div>
                    <div class="host">
                        <p class="card-text">
                            Hosted by:
                        </p>
                        <p class="card-text">
                            {{meetup.username}}
                        </p>
                    </div>
                    <a href="#">
                        <img id="profile-image" class="media-object pull-right img-circle meetup-profile-link" src="{{meetup.avatar_url}}"
                             style="height:38px;width:38px;" alt="profile-image">
                    </a>
                    <div class="divider"></div>

                </div>

                <p class="card-text">Description: {{meetup.description}}</p>
                <p class="card-text">Location: {{meetup.location}}</p>
                <div class="divider"></div>

                <i class="fa fa-map-o btn btn-primary pull-right" aria-hidden="true"></i>
                {{#if isOwner}}
                    <a href="edit">
                        <i class="fa fa-pencil btn btn-primary pull-right" aria-hidden="true"></i>
                    </a>
                {{/if}}

            </div>

        </div>
    </div>

