<div class="container">
    <div class="container meetups">
        <div class="row">
            <div class="col-sm-6">
                <div class="card card-block">
                    <div class="card-img-top" id="map"></div>
                    <div>
                        <a class="media-left" href="#">
                            <img id="profile-image" class="media-object img-circle" src="{{meetup.avatar_url}}"
                                 alt="profile-image">
                        </a>
                        <h3 class="card-title">
                            {{meetup.title}}
                        </h3>
                    </div>

                    <p class="card-text">{{meetup.username}}</p>
                    <p class="card-text">{{meetup.description}}</p>
                    <p class="card-text">{{meetup.location}}</p>
                    {{#if isOwner}}
                        <a href="meetups/{{meetups.id}}/edit">edit</a>
                    {{/if}}

                </div>
                <div class="container cards">
                    <div class="row">
                        <div class="col-sm-6">
                            <div id="map"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


