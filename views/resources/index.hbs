<div class="container" id="resources-feed">
    <div class="row">
        <div class="col-sm-4">
            <h1 id="resources-heading">Resources Feed</h1>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-sm-2">
                <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#add-resource"><i class="fa fa-plus" aria-hidden="true"></i> Add Resource</button>
            </div>
            <div class="col-sm-6">
                <form class="" action="/resources/search" method="POST">
                    <div class="input-group">
                        <input name="search" type="text" class="form-control" placeholder="Tag"><span class="input-group-btn"><button class="btn btn-secondary" type="submit">Search</button></span>
                    </div>
                </form>
            </div>
        </div>

    </div>

    <!-- Button trigger modal -->

    <!-- Modal -->
    <form class="resources" action="/resources/new" method="POST">

        <div class="modal fade" id="add-resource" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h2>Add New Resource</h2>
                    </div>
                    <br>
                    <div class="modal-body">
                        <div class="input-group input-group-lg">
                            <input name="title" type="text" class="form-control" placeholder="Title" aria-describedby="sizing-addon1">
                        </div>
                        <br>
                        <div class="input-group">
                            <!-- <span class="input-group-addon" id="basic-addon3">https://</span> -->
                            <input id="link" placeholder="Enter Link" name="link" type="url" class="form-control" id="basic-url" aria-describedby="basic-addon3">
                        </div>
                        <br>
                        <div class="input-group">
                            <textarea placeholder="Description" name="description" class="form-control"></textarea>
                        </div>
                        <br>
                        <div class="input-group input-group-lg">
                          <input type="text" class="form-control" name="tags" value="" placeholder="tags">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <div class="container">
        <div class="row">
            <div class="col-sm-8">
                {{#each resource}}
                    <div class="media resource">
                        <a class="media-left =" href="#">
                            <img id="profile-image" class="media-object img-circle" src="{{avatar_url}}" alt="profile-image">
                        </a>
                        <div class="media-body">
                            <a id="header" href="{{link}}">
                                <h4 class="media-heading">{{resource_title}}</h4>
                            </a>
                            <p>
                                {{description}}
                            </p>

                            <div class="row">
                                <div class="col-sm-2">
                                    <button type="button" id="{{resource_id}}" class="btn btn-secondary likes"><i id="heart" class="fa fa-heart-o" aria-hidden="true"></i>{{likes}}</button>
                                </div>
                                <div class="col-sm-4">
                                    <button type="button" id="{{resource_id}}" class="btn btn-secondary favorites"><i id="star" class="fa fa-star-o" aria-hidden="true"></i></button>
                                    <a href="/resources/{{resource_id}}/edit"><button type="button" class="btn btn-secondary" name="edit"><i class="fa fa-pencil" aria-hidden="true"></i></button></a>
                                    <a href="/resources/{{resource_id}}/delete"><button type="button" class="btn btn-secondary" name="edit"><i class="fa fa-trash-o" aria-hidden="true"></i></button></a>
                                </div>
                                <div class="col-sm-6">
                                    {{#each tags}}
                                        <span class="tag tag-default">{{this}}</span>
                                    {{/each}}
                                </div>
                            </div>
                        </div>
                    </div>
                {{/each}}
            </div>
            <div class="col-sm-4">
                <div class="card">
                    <div class="list-group">
                        {{#each favorites}}
                            <a href="{{link}}" class="list-group-item">{{title}}<span class="tag tag-default tag-pill pull-xs-right"></span><i class="fa fa-star" aria-hidden="true"></i></a>
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
